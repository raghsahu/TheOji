<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_undeclear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3360DC"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.60"
            android:gravity="start|center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:typeface="serif" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/login_body1"
        android:gravity="center"
        android:orientation="vertical"
       android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:scrollbars="none">


        <LinearLayout
            android:id="@+id/login_body"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:typeface="serif" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <Spinner
                android:id="@+id/type"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </Spinner>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_views1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <Spinner
                android:id="@+id/state_type"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </Spinner>
        </android.support.v7.widget.CardView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_city"
                android:textColorHint="#FF3360DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/city"
                    android:hint="City"
                    android:textSize="13dp"
                    android:textColor="#FF3360DC"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_views_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <Spinner
                    android:id="@+id/sch_boardname"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="aaaa"
                    android:entries="@array/board_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                </Spinner>
            </android.support.v7.widget.CardView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tv_code"
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/sch_code"
                android:hint="School Code"
                android:textSize="13dp"
                android:textColor="#FF3360DC"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_sch_name"
                android:textColorHint="#FF3360DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sch_name"
                    android:hint="School Name"
                    android:textSize="13dp"
                    android:textColor="#FF3360DC"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tv_fullname"
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/full_name"
                android:hint="Full Name"
                android:textSize="13dp"
                android:textColor="#FF3360DC"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tv_father_name"
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/father_name"
                android:hint="Father Name"
                android:textSize="13dp"
                android:textColor="#FF3360DC"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/email"
                android:hint="Email Address"
                android:textSize="13dp"
                android:textColor="#FF3360DC"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/mobile"
                android:hint="Mobile no"
                android:textSize="13dp"
                android:inputType="number"
                android:textColor="#FF3360DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_saleslead"
                android:textColorHint="#FF3360DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/sales_lead"
                    android:hint="Enter sales lead name"
                    android:textSize="13dp"
                    android:textColor="#FF3360DC"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="#FF3360DC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/reg_pw"
                android:hint="Password"
                android:textSize="13dp"
                android:inputType="text"
                android:textColor="#FF3360DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:padding="5dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="I agree to terms and conditions."
                    android:textAlignment="gravity" />
            </LinearLayout>

        </LinearLayout>

        </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="center"
                android:orientation="vertical">

        <Button
            android:id="@+id/cont_reg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff" />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>