<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/le1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_person"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/person" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/le2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/le3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textSize="12sp" />

                <!--<TextView-->
                    <!--android:id="@+id/txt4"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="06:11:00"-->
                    <!--android:typeface="serif"-->
                    <!--android:textSize="12sp" />-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="2dp"

                     />

                <TextView
                    android:id="@+id/txt_nm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:typeface="serif"
                    android:textStyle="normal"
                    android:textColor="#000"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >


        <RelativeLayout
            android:id="@+id/badge_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            >
            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn1"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/like_icon"
                    android:background="@drawable/dot" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/dis_btn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/dislike_icon"
                    android:background="@drawable/dot" />
            </RelativeLayout>
            <TextView
                android:id="@+id/badge_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/relative_layout"
                android:background="@drawable/item_count"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:textStyle="bold" />
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/badge_layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                >
                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@drawable/comm"
                        android:background="@drawable/dot" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/badge_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/relative_layout1"
                    android:background="@drawable/item_count"

                    android:textColor="#FFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/badge_layout111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                >
            <RelativeLayout
                android:id="@+id/relative_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn3"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/delete"
                    android:background="@drawable/dot" />
            </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="2"
           android:visibility="gone"
            >

            <LinearLayout
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/commentall"
                    android:inputType="textMultiLine"
                    android:layout_weight="0.15"
                    android:textSize="14dp"
                    android:text="View all comments"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FF3360DC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/image_close"
                    android:src="@drawable/close_icon"
                    android:layout_weight="0.85"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:weightSum="1"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<EditText-->
                    <!--android:id="@+id/commenttxt"-->
                    <!--android:inputType="textMultiLine"-->
                    <!--android:layout_weight="0.15"-->
                    <!--android:textSize="14dp"-->
                    <!--android:hint="Type here..."-->

                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:textColor="#000"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/btnSend"-->
                    <!--android:src="@drawable/send"-->
                    <!--android:layout_weight="0.85"-->
                    <!--android:padding="8dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

            <!--</LinearLayout>-->
        </LinearLayout>



    </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>