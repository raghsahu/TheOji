                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn3"
                            android:layout_width="@dimen/like_icon_hight"
                            android:layout_height="@dimen/like_icon_hight"
                            android:background="@drawable/dot"
                            android:padding="15dp"
                            android:src="@drawable/delete" />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
