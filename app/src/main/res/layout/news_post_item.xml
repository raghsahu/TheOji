                <RelativeLayout
                    android:id="@+id/badge_layout111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    >
                    <RelativeLayout
                        android:id="@+id/relative_layout2"
