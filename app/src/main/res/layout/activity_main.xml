            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
            <!--android:src="@drawable/library"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp" />-->

            <!--<TextView-->
            <!--android:text="Library"-->
            <!--android:gravity="center"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <!--</LinearLayout>-->
            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>