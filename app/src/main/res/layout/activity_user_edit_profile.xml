                            <!--</RelativeLayout>-->

                            <!--<ImageView-->
                                <!--android:id="@+id/badge_notification_1"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignRight="@id/relative_layout"-->
